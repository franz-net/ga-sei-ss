{
  "include": [
    "**/*"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
